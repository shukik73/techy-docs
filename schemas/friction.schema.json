{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Technician Friction Entry",
  "description": "Captures real bench-level friction reported by technicians. Elevated to L2 Draft fix when actionable.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "reported_ts": { "type": "string", "format": "date-time" },
    "reporter": { "type": "string", "description": "Technician name or 'self'" },
    "category": {
      "type": "string",
      "enum": ["slow_tool", "missing_part", "workflow_gap", "software_bug", "knowledge_gap", "equipment_failure"]
    },
    "description": { "type": "string" },
    "estimated_time_lost_minutes": { "type": "number", "minimum": 0 },
    "frequency": {
      "type": "string",
      "enum": ["one_off", "daily", "weekly", "per_repair"]
    },
    "annual_cost_estimate_usd": {
      "type": "number",
      "description": "frequency × time_lost × hourly_rate. Auto-computed."
    },
    "status": {
      "type": "string",
      "enum": ["reported", "triaged", "fix_drafted", "fix_deployed", "wont_fix"]
    },
    "fix_episode_id": { "type": ["string", "null"] },
    "north_star_impact": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "How directly this friction blocks the $250k target"
    }
  },
  "required": ["id", "reported_ts", "category", "description"]
}
